# Environment configuration for AutoTTS
# Copy this file to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# API Configuration
API_BASE=/v1
DEFAULT_VOICE=alloy
DEFAULT_MODEL=tts-1

# TTS Engine Configuration
ENABLE_OUTETTS=true
ENABLE_CHATTERBOX=true

# OuteTTS Configuration
# OUTETTS_MODEL_PATH=/path/to/outetts/model
OUTETTS_DEVICE=auto

# Chatterbox TTS Configuration  
# CHATTERBOX_MODEL_PATH=/path/to/chatterbox/model
CHATTERBOX_DEVICE=auto

# Language Detection
AUTO_DETECT_LANGUAGE=true
DEFAULT_LANGUAGE=en

# Audio Output Configuration
OUTPUT_FORMAT=mp3
SAMPLE_RATE=24000

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=./cache
